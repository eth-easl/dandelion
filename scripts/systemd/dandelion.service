[Unit]
Description=Dandelion service
After=multi-user.target
[Service]
Type=simple
Restart=always
Environment="PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:/snap/bin:/usr/local/go/bin:/usr/local/bin/firecracker"
User=fanlin
ExecStart=/bin/bash -c 'cd $HOME/dandelion && cargo run --bin dandelion_server -F mmu,reqwest_io'
KillSignal=SIGKILL
[Install]
WantedBy=multi-user.target
